<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Крестики-Нолики" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Клетки -->     
        <Button Grid.Row="0" Grid.Column="0" Tag="0" Click="CellClicked" Margin="2" Background="LightGray"/>
        <Button Grid.Row="0" Grid.Column="1" Tag="1" Click="CellClicked" Margin="2" Background="LightGray"/>
        <Button Grid.Row="0" Grid.Column="2" Tag="2" Click="CellClicked" Margin="2" Background="LightGray"/>

        <Button Grid.Row="1" Grid.Column="0" Tag="3" Click="CellClicked" Margin="2" Background="LightGray"/>
        <Button Grid.Row="1" Grid.Column="1" Tag="4" Click="CellClicked" Margin="2" Background="LightGray"/>
        <Button Grid.Row="1" Grid.Column="2" Tag="5" Click="CellClicked" Margin="2" Background="LightGray"/>

        <Button Grid.Row="2" Grid.Column="0" Tag="6" Click="CellClicked" Margin="2" Background="LightGray"/>
        <Button Grid.Row="2" Grid.Column="1" Tag="7" Click="CellClicked" Margin="2" Background="LightGray"/>
        <Button Grid.Row="2" Grid.Column="2" Tag="8" Click="CellClicked" Margin="2" Background="LightGray"/>

        <!-- Статус -->
        <TextBlock Name="txtStatus" Grid.Row="3" Grid.ColumnSpan="3"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="20" Text="Ходит: X"/>
    </Grid>
</Window>